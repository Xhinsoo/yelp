<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <!-- one way of centering it, if we have 12 units and i want the middle 6 and i dont want it all the wya to left, offset it by 3 -->
  <div class="col-6 offset-3">
    <form action="/campground" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">Please provide valid title</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="campground[location]"
          required
        />
        <div class="invalid-feedback">Please provide valid location</div>
      </div>
      <input type="file" name="image" id="" multiple>
      <!-- <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="campground[image]"
          required
        />
        <div class="invalid-feedback">Please provide valid image url</div> -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <input
          class="form-control"
          type="text"
          id="price"
          name="campground[price]"
          value="0.00"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
        ></textarea>
      </div>
      <button class="btn btn-info">Add Campground</button>
    </form>
  </div>
</div>
