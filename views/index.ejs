<% layout('layouts/boilerplate') %>
<h1>All campgrounds</h1>
<div>
  <a href="/campground/new">Add campground</a>
</div>
<% for (let campground of campgrounds) { %>
<div class="card" mb-3>
  <div class="row">
    <!-- take 4 units out of 12 -->
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%=campground.image %>" />
    </div>
    <div class="col-md-8">
      <div class="card-body"><h5 class="card-title"><%=campground.title %></h5>
      <p class="card-text"><%=campground.description %></p>
      </div>
    </div>
  </div>
</div>
<a href="/campground/<%=campground._id %>"><%= campground.title %> </a>
<% } %>
